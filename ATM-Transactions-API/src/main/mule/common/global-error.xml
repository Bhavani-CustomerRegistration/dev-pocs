                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"message" : "Bad request",
	"code": 400,
	"transactionId": "123456789123456789123456789123456789",
	"error": {
		"type": error.errorType,
		"details": error.description
	
}
}
]]></ee:set-payload>
